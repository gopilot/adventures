doctype
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		title Complete your #{title} registration
		link(rel='stylesheet', href='font/icon-7/css/icons.css')
		link(rel='stylesheet', href='css/complete.css')
	body
		.header
			.pilot-logo
		.content
			h1.title Complete your #{title} Registration
			form.complete
				span.optional * All fields are required unless noted otherwise.
				.input-container.name
					.input-label Name
					input.js-name(required placeholder="Student's Name" type="text" data-validation="name" name="name")
					i.status
				.input-container.email
					.input-label Email
					input.js-email(required placeholder="student@example.com" type="email" data-validation="email" name="email")
					i.status.pe-7s-check
				.input-container.password
					.input-label Pilot Password
						span.tiny  (Will be needed to log in later)
					input(required placeholder="Password" type="password" data-validation="password" name="password")
					input(required placeholder="Confirm Password" type="password" data-validation="password" name="confirm_password")
				.input-container.half.half-lg.gender
					.input-label Gender
					.toggle-group(name="gender")
						.toggle-button(value="male") Male
						.toggle-button(value="female") Female
						.toggle-button(value="other") Other
				.input-container.age
					.input-label Birth Date
					input(required placeholder="mm/dd/yy" type="text" pattern='[0-9\/]{7,9}' data-validation="date" name="birth_date")
					i.status
				.input-container.grade
					.input-label Grade
					.toggle-group(name="grade")
						.toggle-button(value="9") 9th
						.toggle-button(value="10") 10th
						.toggle-button(value="11") 11th
						.toggle-button(value="12") 12th
						.toggle-button(value="other") Other
				.input-container.cell
					.input-label Cell Phone
					input(required placeholder="555-555-5555" type="text" pattern='[0-9]{10}' data-validation="phone" name="phone")
					i.status
				.input-container.emergency-name
					.input-label Emergency Contact Name
					input(required placeholder="Contact's Name" type="text" pattern='' data-validation="name" name="emergency_name")
					i.status
				.input-container.emergency-email
					.input-label Emergency Contact Email
					input(required placeholder="adult@example.com" type="email" data-validation="email" name="emergency_email")
					i.status
				.input-container.emergency-phone
					.input-label Emergency Contact Cell Phone
					input(required placeholder="555-555-5555" type="text" pattern='[0-9]{10}' data-validation="phone" name="emergency_phone")
					i.status
				.input-container.half.half-lg.has-experience
					.input-label Do you have previous programming experience?
					.toggle-group(name="has_experience")
						.toggle-button(value="1") Yes
						.toggle-button(value="0") No
				.input-container.half.half-sm.experience.hidden
					.input-label How many years?
					input(required type="text" pattern="[0-9]*" data-validation="experience" name="experience_years")
					i.status
				.input-container.tshirt
					.input-label T-shirt size
					.toggle-group.tshirt-type(name="shirt_type")
						.toggle-button(value="unisex") Unisex
						.toggle-button(value="womens") Women
					.toggle-group.tshirt-size(name="shirt_size")
						.toggle-button(value="small") Small
						.toggle-button(value="medium") Medium
						.toggle-button(value="large") Large
				.input-container.diet
					.input-label Please list any dietary restrictions:
					textarea(placeholder="(optional)").js-dietary
				.input-container.other
					.input-label Anything else you want us to know?
					textarea(placeholder="(optional)").js-other
				a.button.large.blue.js-submit Complete Registration

		script(type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js")
		script(type="text/javascript" src="/scripts/jquery.typewatch.js")
		script(type="text/javascript" src="/scripts/complete.js" async)
		<script>var PILOT_EVENT_ID = "#{event_id}";</script>