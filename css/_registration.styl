.modal-overlay
    position fixed
    width 100%
    height 100%
    visibility hidden
    top 0
    left 0
    z-index 1000
    opacity 0
    background rgba(28,155,230,0.7);
    transition all 0.3s

.modal
    position fixed
    top 50%
    left 50%
    width 50%
    max-width 630px
    min-width 320px
    height auto
    z-index 2000
    visibility hidden
    backface-visibility hidden
    transform translateX(-50%) translateY(-50%)

    .modal-content
        position relative
        text-align center
        padding 25px

        width 100%

        border-radius 2px

        transform scale(0.7)
        opacity 0
        transition all 0.3s

        .modal-title
            display block
            font-size 2rem
            margin-bottom 25px

        .button-container
            width 100%
            display block
            margin-top 20px
            text-align center

        .show-discount
            display block
            position absolute
            right 0
            bottom 0
            margin 10px 15px
            cursor pointer

        .modal-text
            margin 20px auto

        .register-form
            .input-container
                display block
                margin 10px auto
                border-radius 2px

                text-align right
                background: lighten(colors.slate, 20%)
                width 50%

                box-sizing border-box;
                border: 2px solid rgba(white, 0)

                input
                    width 85%
                    height 35px
                    font-size 15px

                    background: lighten(colors.slate, 20%)
                    color white
                    border none
                    padding 2px
                    outline none

                i
                    float left
                    display inline-block
                    width 25px
                    font-size 24px
                    padding-top 7px
                    padding-left 5px
                    line-height 25px

                &.error
                    border: 2px solid darken(red, 40%) !important

                &.hidden
                    display none

                &.credit-card

                    .input-container
                        width 100%
                        margin 0px
                        border-bottom: 1px solid lighten(colors.slate, 10%)
                        border-radius 0px

                    .input-container.half
                        width 49.8%
                        display inline-block
                        margin 0px
                        border-bottom 0px

                        input
                            width 70%

                        i
                            padding-left 3px

                        &:last-child
                            border-left: 1px solid lighten(colors.slate, 10%)

    &.show
        visibility visible

        & ~ .modal-overlay
            opacity 1
            visibility visible

        .modal-content
            transform scale(1)
            opacity 1